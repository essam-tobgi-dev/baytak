<div class="min-h-screen bg-gradient-to-b from-black to-gray-800 py-10">
  <div class="flex flex-col mx-auto justify-between mt-5 items-center">
    <h1 class="font-bold text-4xl mt-16 text-white">Find your next home</h1>
    <p class="text-white">Your properties feed is ready and updated, enjoy the ride!</p>
    <div class="w-full max-w-7xl mx-auto px-4">
      <!-- Notice Alert -->
      <% if notice.present? %>
        <div class="mb-6">
          <p class="py-2 px-3 bg-green-50 text-green-700 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
        </div>
      <% end %>

      <!-- Header Section -->
      <div class="flex justify-between items-center mb-8">
        <h1 class="font-bold text-4xl text-white">Recent properties</h1>
        <%= link_to "New property", new_project_path, class: "rounded-md px-4 py-2 bg-blue-600 hover:bg-blue-500 text-white font-medium transition duration-200 ease-in-out" %>
      </div>

      <!-- properties List -->
      <div id="properties" class="space-y-6">
        <% if @properties.any? %>
          <% @properties.each do |property| %>
            <div class="bg-white shadow-lg rounded-lg p-6">
              <div class="w-full flex flex-row">
                <%= render property %>
                <div class="w-1/3 ml-8 mt-8">
                  <%= turbo_frame_tag :comments do %>
                    <div class="flex flex-row items-center justify-evenly gap-x-4">
                      <%= link_to "Leave a Comment", new_property_comment_path(property), class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
                      <p> <%= "#{property.comments.count} Comments" %> </p>
                    </div>
                    
                  <% end %>
                  <div class="space-y-4 mt-8">
                    <% property.comments.each do |comment| %>
                      <div id="<%= dom_id comment %>" class="p-4 bg-gray-100 rounded-lg shadow">
                          <div class="flex justify-between items-start">
                            <p class="text-gray-500">By: <%= comment.user.email.split("@").first %></p>
                          </div>
                          <p class="text-gray-700"><%= comment.content %></p>
                          <p class="mt-2 text-sm text-gray-500">Posted on <%= time_ago_in_words(comment.created_at) %></p>
                      </div>
                    <% end %>
                  </div>
                </div>
              </div>
              <div class="mt-4">
                <%= link_to "Show this property", property, class: "rounded-lg px-5 py-3 bg-gradient-to-r from-blue-500 to-purple-600 text-white font-semibold shadow-md hover:shadow-lg transition-all duration-300 ease-in-out transform hover:scale-105 hover:bg-gradient-to-r hover:from-red-500 hover:to-yellow-600" %>
              </div>
            </div>
          <% end %>
        <% else %>
          <p class="text-center text-gray-300 my-10">No properties found.</p>
        <% end %>
      </div>
    </div>
  </div>
</div>

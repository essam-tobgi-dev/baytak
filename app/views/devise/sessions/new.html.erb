<div class="w-full min-h-screen pt-16 bg-gray-100">
  <div class="max-w-md mx-auto bg-white shadow-xl rounded-2xl overflow-hidden p-8">
    <div class="flex justify-center mb-6">
      <img src="<%= asset_path 'logo-transparent.png' %>" alt="Baytak Logo" class="h-12 w-auto">
    </div>

    <h2 class="text-2xl font-semibold text-center text-gray-800 mb-6">Welcome back</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-4">
        <%= f.label :email, class: "block text-gray-700 font-medium mb-1" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring focus:ring-blue-300" %>
      </div>

      <div class="mb-4">
        <%= f.label :password, class: "block text-gray-700 font-medium mb-1" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring focus:ring-blue-300" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="mb-4 flex items-center gap-2">
          <%= f.check_box :remember_me, class: "rounded text-blue-600 focus:ring focus:ring-blue-300" %>
          <%= f.label :remember_me, class: "text-sm text-gray-700" %>
        </div>
      <% end %>

      <%= f.submit "Log in", class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 rounded-md transition duration-200" %>
    <% end %>

    <div class="mt-6 text-center text-sm text-gray-600">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
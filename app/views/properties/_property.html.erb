<div id="<%= dom_id property %>" class="max-w-4xl mx-auto bg-white rounded-2xl shadow-lg p-6 sm:p-10 my-8 space-y-6 border border-gray-200">
  <!-- Header -->
  <div class="flex items-center justify-between border-b pb-4">
    <img src=<%= asset_path("logo-transparent.png") %> alt="Baytak Logo" class="w-12 h-12">
  </div>

  <!-- Property Fields -->
  <div class="mt-6">
    <strong class="block text-gray-600 font-semibold mb-2">Property Schematic:</strong>
    <img src=<%= asset_path("property.png")%> alt="Modern Project Banner" class="rounded-xl shadow w-full max-h-96 object-cover">
  </div>
  <div class="grid sm:grid-cols-2 gap-6">
    <!-- External Project Banner Image -->
    <div>
      <strong class="block text-gray-600 font-semibold mb-1">Name:</strong>
      <p class="text-gray-800"><%= property.name %></p>
    </div>

    <div>
      <strong class="block text-gray-600 font-semibold mb-1">Property type:</strong>
      <p class="text-gray-800"><%= property.property_type %></p>
    </div>

    <div>
      <strong class="block text-gray-600 font-semibold mb-1">Area:</strong>
      <p class="text-gray-800"><%= property.area %></p>
    </div>

    <div>
      <strong class="block text-gray-600 font-semibold mb-1">Price:</strong>
      <p class="text-gray-800"><%= property.price %></p>
    </div>

    <div>
      <strong class="block text-gray-600 font-semibold mb-1">Bedrooms:</strong>
      <p class="text-gray-800"><%= property.bedrooms %></p>
    </div>

    <div>
      <strong class="block text-gray-600 font-semibold mb-1">Bathrooms:</strong>
      <p class="text-gray-800"><%= property.bathrooms %></p>
    </div>

    <div>
      <strong class="block text-gray-600 font-semibold mb-1">Floor number:</strong>
      <p class="text-gray-800"><%= property.floor_number %></p>
    </div>

    <div>
      <strong class="block text-gray-600 font-semibold mb-1">Status:</strong>
      <p class="text-gray-800"><%= property.status %></p>
    </div>

    <div>
      <strong class="block text-gray-600 font-semibold mb-1">Delivery date:</strong>
      <p class="text-gray-800"><%= property.delivery_date %></p>
    </div>

    <div>
      <strong class="block text-gray-600 font-semibold mb-1">Project ID:</strong>
      <p class="text-gray-800"><%= property.project_id %></p>
    </div>
  </div>

  <!-- Description -->
  <div>
    <strong class="block text-gray-600 font-semibold mb-1">Description:</strong>
    <p class="text-gray-700 leading-relaxed"><%= property.description %></p>
  </div>

  <!-- Uploaded Images -->
  <% if property.images.attached? %>
    <div>
      <strong class="block text-gray-600 font-semibold mb-2">Property Images:</strong>
      <div class="grid sm:grid-cols-2 md:grid-cols-3 gap-4">
        <% property.images.each do |image| %>
          <div class="bg-gray-50 p-2 rounded-lg shadow border border-gray-100">
            <%= image_tag image, class: "rounded-md w-full object-cover h-48" %>
            <div class="mt-2 text-sm text-center">
              <%= link_to image.filename, rails_blob_path(image, disposition: "attachment"), class: "text-blue-600 hover:underline" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

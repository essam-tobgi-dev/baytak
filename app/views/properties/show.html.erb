<% content_for :title, "Showing property" %>

<div class="max-w-5xl mx-auto px-4 py-10">
  <!-- Notice message -->
  <% if notice.present? %>
    <div class="mb-6 rounded-md bg-green-50 border border-green-200 px-4 py-3 text-green-700 font-medium shadow-sm">
      <%= notice %>
    </div>
  <% end %>

  <!-- Page title -->
  <h1 class="text-3xl sm:text-4xl font-bold text-gray-800 mb-8 border-b pb-2">Property Overview</h1>

  <!-- property details partial -->
  <%= render @property %>

  <!-- Action buttons -->
  <div class="mt-10 flex flex-col sm:flex-row gap-4">
    <%= link_to "âœï¸ Edit property", edit_property_path(@property),
        class: "w-full sm:w-auto text-center rounded-lg px-5 py-2.5 bg-blue-600 text-white hover:bg-blue-500 transition font-medium shadow-sm" %>

    <%= link_to "â† Back to properties", properties_path,
        class: "w-full sm:w-auto text-center rounded-lg px-5 py-2.5 bg-gray-100 text-gray-800 hover:bg-gray-200 transition font-medium shadow-sm" %>

    <%= button_to "ðŸ—‘ï¸ Delete property", @property, method: :delete,
        form_class: "sm:inline-block",
        class: "w-full sm:w-auto rounded-lg px-5 py-2.5 bg-red-600 text-white hover:bg-red-500 transition font-medium shadow-sm",
        data: { turbo_confirm: "Are you sure you want to delete this property?" } %>
  </div>
</div>

<!-- HERO -->
<div class="min-h-screen flex items-center justify-center bg-gradient-to-tl from-amber-200 to-amber-50 px-6 py-16">
  <div class="max-w-6xl w-full flex flex-col-reverse md:flex-row items-center justify-between gap-12">
    
    <!-- Left: Text content -->
    <div class="text-center md:text-left max-w-xl">
      <h1 class="text-4xl md:text-5xl font-extrabold text-gray-800 leading-tight">
        Find Your Dream <span class="text-amber-500">Property</span>
      </h1>
      <p class="mt-4 text-lg text-gray-600">
        Discover homes, apartments, and commercial spaces that match your lifestyle. Explore listings, compare prices, and make confident decisions — all in one place.
      </p>
      <div class="mt-6 flex justify-center md:justify-start gap-4">
        <a href="#browse-properties" class="px-6 py-3 bg-amber-500 hover:bg-amber-600 text-white font-semibold rounded-xl shadow-md transition">
          Browse Properties
        </a>
        <a href="#how-it-works" class="px-6 py-3 bg-white text-amber-600 font-semibold rounded-xl border border-amber-300 hover:bg-amber-100 transition">
          Learn More
        </a>
      </div>
    </div>

    <!-- Right: Image -->
    <div class="w-full md:w-1/2 flex justify-center">
      <img 
        src="<%= asset_path 'logo-transparent.png' %>" 
        alt="Find Properties" 
        class="w-80 h-auto object-contain drop-shadow-lg"
      />
    </div>

  </div>
</div>



<!-- SEARCH BAR -->
<div class="bg-white py-12 px-6">
  <div class="max-w-4xl mx-auto text-center">
    <h2 class="text-2xl font-semibold text-gray-700">Start your property search</h2>
    <form class="mt-6 flex flex-col md:flex-row gap-4 items-center justify-center">
      <input type="text" placeholder="Enter location..." class="w-full md:w-1/2 px-4 py-3 rounded-lg border border-gray-300 shadow-sm focus:outline-none focus:ring-2 focus:ring-amber-500" />
      <select class="w-full md:w-1/4 px-4 py-3 rounded-lg border border-gray-300 shadow-sm">
        <option>Property Type</option>
        <option>Apartment</option>
        <option>Villa</option>
        <option>Commercial</option>
      </select>
      <button class="bg-amber-500 hover:bg-amber-600 text-white font-semibold px-6 py-3 rounded-lg shadow-md transition">
        Search
      </button>
    </form>
  </div>
</div>

<!-- FEATURED LISTINGS -->
<div id="browse-properties" class="bg-gray-50 py-16 px-6">
  <div class="max-w-7xl mx-auto">
    <h2 class="text-3xl font-bold text-center text-gray-800 mb-10">Featured Listings</h2>
    <div class="grid gap-8 md:grid-cols-3">
      <% [
        { title: "Luxury Apartments with Lake View", image: asset_path('vida.jpg'), price: "4,250,000 EGP", location: "October Gardens" },
        { title: "Modern Apartment near EMPC", image: asset_path('upwest.jpg'), price: "2,200,000 EGP", location: "October Gardens" },
        { title: "Commercial Space on 26July Axis", image: asset_path('alkarma.jpg'), price: "5,980,000 EGP", location: "Sheikh Zayed" }
      ].each do |property| %>
        <div class="bg-white rounded-xl shadow-md overflow-hidden">
          <img src="<%= property[:image] %>" alt="<%= property[:title] %>" class="w-full h-56 object-cover" />
          <div class="p-6">
            <h3 class="text-xl font-semibold text-gray-800"><%= property[:title] %></h3>
            <p class="text-gray-500 mt-2"><%= property[:location] %></p>
            <p class="text-amber-600 font-bold text-lg mt-2"><%= property[:price] %></p>
            <a href="#" class="inline-block mt-4 text-amber-600 hover:underline font-medium">View Details</a>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<!-- HOW IT WORKS -->
<div id="how-it-works" class="bg-white py-20 px-6">
  <div class="max-w-6xl mx-auto text-center">
    <h2 class="text-3xl font-bold text-gray-800 mb-12">How It Works</h2>
    <div class="grid md:grid-cols-3 gap-10 text-left">
      <div>
        <h3 class="text-xl font-semibold text-amber-600">1. Search & Discover</h3>
        <p class="mt-3 text-gray-600">Find the right property using filters for location, price, property type, and more. Our AI helps you discover hidden gems.</p>
      </div>
      <div>
        <h3 class="text-xl font-semibold text-amber-600">2. Connect & Schedule</h3>
        <p class="mt-3 text-gray-600">Contact verified agents directly or schedule visits at your convenience with our intuitive calendar system.</p>
      </div>
      <div>
        <h3 class="text-xl font-semibold text-amber-600">3. Buy or Rent Seamlessly</h3>
        <p class="mt-3 text-gray-600">Close deals with confidence. We offer secure document handling and legal support to guide you through the process.</p>
      </div>
    </div>
  </div>
</div>

<!-- TESTIMONIALS -->

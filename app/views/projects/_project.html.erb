<div id="<%= dom_id project %>" class="max-w-4xl mx-auto bg-white rounded-2xl shadow-lg p-6 sm:p-10 my-8 space-y-6 border border-gray-200">
  <!-- Logo and Header -->
  <div class="flex items-center justify-between border-b pb-4">
    <img src=<%= asset_path("logo-transparent.png") %> alt="Baytak Logo" class="w-12 h-12">
    <h2 class="text-2xl font-bold text-gray-800">Project Details</h2>
  </div>

  <div class="grid sm:grid-cols-2 gap-6">
    <div>
      <strong class="block text-gray-600 font-semibold mb-1">Name:</strong>
      <p class="text-gray-800"><%= project.name %></p>
    </div>

    <div>
      <strong class="block text-gray-600 font-semibold mb-1">Location:</strong>
      <p class="text-gray-800"><%= project.location %></p>
    </div>

    <div>
      <strong class="block text-gray-600 font-semibold mb-1">Developer:</strong>
      <p class="text-gray-800"><%= project.developer %></p>
    </div>

    <div>
      <strong class="block text-gray-600 font-semibold mb-1">Status:</strong>
      <p class="text-gray-800"><%= project.status %></p>
    </div>

    <div>
      <strong class="block text-gray-600 font-semibold mb-1">Total Units:</strong>
      <p class="text-gray-800"><%= project.total_units %></p>
    </div>

    <div>
      <strong class="block text-gray-600 font-semibold mb-1">Completion Date:</strong>
      <p class="text-gray-800"><%= project.completion_date %></p>
    </div>
  </div>

  <div>
    <strong class="block text-gray-600 font-semibold mb-1">Description:</strong>
    <p class="text-gray-700 leading-relaxed"><%= project.description %></p>
  </div>

  <!-- External Project Banner Image -->
  <div class="mt-6">
    <strong class="block text-gray-600 font-semibold mb-2">Project Banner:</strong>
    <img src="https://images.unsplash.com/photo-1600585154340-be6161a56a0c" alt="Modern Project Banner" class="rounded-xl shadow w-full max-h-96 object-cover">
  </div>

  <!-- Uploaded Images -->
  <div>
    <strong class="block text-gray-600 font-semibold mb-2">Uploaded Images:</strong>
    <div class="grid sm:grid-cols-2 md:grid-cols-3 gap-4">
      <% project.images.each do |image| %>
        <div class="bg-gray-50 p-2 rounded-lg shadow border border-gray-100">
          <%= image_tag image, class: "rounded-md w-full object-cover h-48" %>
          <div class="mt-2 text-sm text-center">
            <%= link_to image.filename, rails_blob_path(image, disposition: "attachment"), class: "text-blue-600 hover:underline" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
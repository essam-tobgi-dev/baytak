<div id="<%= dom_id project %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Name:</strong>
    <%= project.name %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Location:</strong>
    <%= project.location %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Developer:</strong>
    <%= project.developer %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Status:</strong>
    <%= project.status %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Total units:</strong>
    <%= project.total_units %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Completion date:</strong>
    <%= project.completion_date %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Description:</strong>
    <%= project.description %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Images:</strong>
    <% project.images.each do |image| %>
      <div><%= link_to image.filename, image, class: "text-gray-700 underline hover:no-underline" %></div>
    <% end %>
  </div>
</div>

<%= form_with(model: project, class: "max-w-4xl mx-auto bg-white rounded-xl shadow-md px-6 py-8") do |form| %>
  <h1 class="text-2xl sm:text-3xl font-bold text-gray-800 mb-8 border-b pb-2">
    <%= project.new_record? ? "New Project" : "Edit Project" %>
  </h1>

  <% if project.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-700 border border-red-200 px-4 py-3 rounded-md mb-6 shadow-sm">
      <h2 class="font-semibold mb-2">
        <%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:
      </h2>
      <ul class="list-disc list-inside space-y-1">
        <% project.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%# Form Fields %>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <%# Name %>
    <div>
      <%= form.label :name, class: "font-medium text-gray-700 block mb-1" %>
      <%= form.text_field :name, class: form_field_class(project.errors[:name].any?) %>
    </div>

    <%# Location %>
    <div>
      <%= form.label :location, class: "font-medium text-gray-700 block mb-1" %>
      <%= form.text_field :location, class: form_field_class(project.errors[:location].any?) %>
    </div>

    <%# Developer %>
    <div>
      <%= form.label :developer, class: "font-medium text-gray-700 block mb-1" %>
      <%= form.text_field :developer, class: form_field_class(project.errors[:developer].any?) %>
    </div>

    <%# Status %>
    <div>
      <%= form.label :status, class: "font-medium text-gray-700 block mb-1" %>
      <%= form.text_field :status, class: form_field_class(project.errors[:status].any?) %>
    </div>

    <%# Total Units %>
    <div>
      <%= form.label :total_units, class: "font-medium text-gray-700 block mb-1" %>
      <%= form.number_field :total_units, class: form_field_class(project.errors[:total_units].any?) %>
    </div>

    <%# Completion Date %>
    <div>
      <%= form.label :completion_date, class: "font-medium text-gray-700 block mb-1" %>
      <%= form.date_field :completion_date, class: form_field_class(project.errors[:completion_date].any?) %>
    </div>
  </div>

  <%# Description (Full width) %>
  <div class="mt-6">
    <%= form.label :description, class: "font-medium text-gray-700 block mb-1" %>
    <%= form.rich_textarea :description, class: form_field_class(project.errors[:description].any?) %>
  </div>

  <%# Images Upload %>
  <div class="mt-6">
    <%= form.label :images, class: "font-medium text-gray-700 block mb-1" %>
    <%= form.file_field :images, multiple: true, class: form_field_class(project.errors[:images].any?) %>
  </div>

  <%# Submit Button %>
  <div class="mt-8">
    <%= form.submit (project.new_record? ? "Create Project" : "Update Project"),
        class: "inline-block bg-blue-600 hover:bg-blue-500 text-white font-semibold px-6 py-3 rounded-md transition duration-300 shadow-sm w-full sm:w-auto" %>
  </div>
<% end %>